<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="AccountFragmentActivities.MyDetails">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/donebtn"
        android:layout_width="340dp"
        android:layout_height="67dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/logoutbutn"
        android:fontFamily="@font/quicksand_bold"
        android:text="Done"
        android:textAllCaps="false"
        android:textColor="@color/deepbluedark"
        android:textSize="18sp"
        app:cornerRadius="19dp"
        app:iconTint="@color/deepbluedark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageccjdjkjv4435View25" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="1067dp"
        android:layout_height="448dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signupsignin" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageviewProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Name"
        android:textColor="#6C6C6C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/nameofuser_mydetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nameofuser_mydetails" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="Email"
        android:textColor="#6C6C6C"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/img"
        app:layout_constraintStart_toStartOf="@+id/textView24"
        app:layout_constraintTop_toTopOf="@+id/emailofuser_mydetails" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="Phone"
        android:textColor="#6C6C6C"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/imageVireew25"
        app:layout_constraintStart_toStartOf="@+id/textView30"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="Gender"
        android:textColor="#6C6C6C"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/dob_user_details"
        app:layout_constraintStart_toStartOf="@+id/textView32"
        app:layout_constraintTop_toBottomOf="@+id/imageVireew25" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/dob_user_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/phoneofuserdetails"
        app:layout_constraintTop_toBottomOf="@+id/phoneofuserdetails">


        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="checkButon"
                android:text="Female"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#000000" />

            <View
                android:layout_width="5dp"
                android:layout_height="0dp" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkButon"
                android:text="Male"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#000000" />

        </RadioGroup>

    </LinearLayout>


    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="DOB"
        android:textColor="#6C6C6C"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView40"
        app:layout_constraintStart_toStartOf="@+id/textView32"
        app:layout_constraintTop_toBottomOf="@+id/textView34" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="Weight"
        android:textColor="#6C6C6C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/weight_mydetails"
        app:layout_constraintStart_toStartOf="@+id/textView40"
        app:layout_constraintTop_toBottomOf="@+id/height_userdetails" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_bold"
        android:text="Height"
        android:textColor="#6C6C6C"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/height_userdetails"
        app:layout_constraintStart_toStartOf="@+id/textView36"
        app:layout_constraintTop_toBottomOf="@+id/imageccv45View25" />

    <ImageView
        android:id="@+id/imagddeView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edittextunderline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameofuser_mydetails" />


    <ImageView
        android:id="@+id/imageVireew25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edittextunderline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneofuserdetails" />


    <ImageView
        android:id="@+id/imageccvView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edittextunderline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <ImageView
        android:id="@+id/imageccv45View25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edittextunderline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dob_user_details" />

    <ImageView
        android:id="@+id/imageccv4435View25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edittextunderline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height_userdetails" />

    <ImageView
        android:id="@+id/imageccjdjkjv4435View25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edittextunderline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weight_mydetails" />

    <EditText
        android:id="@+id/nameofuser_mydetails"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:background="@android:color/transparent"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/circleImageviewProfile" />


    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edittextunderline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailofuser_mydetails" />

    <EditText
        android:id="@+id/emailofuser_mydetails"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@android:color/transparent"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/nameofuser_mydetails"
        app:layout_constraintTop_toBottomOf="@+id/imagddeView25" />


    <EditText
        android:id="@+id/phoneofuserdetails"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="number"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/emailofuser_mydetails"
        app:layout_constraintTop_toBottomOf="@+id/img" />

    <EditText
        android:id="@+id/dob_user_details"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@android:color/transparent"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/imageccvView25" />

    <EditText
        android:id="@+id/height_userdetails"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/dob_user_details"
        app:layout_constraintTop_toBottomOf="@+id/dob_user_details" />

    <EditText
        android:id="@+id/weight_mydetails"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="10"
        android:background="@android:color/transparent"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/height_userdetails"
        app:layout_constraintTop_toBottomOf="@+id/imageccv4435View25" />


</androidx.constraintlayout.widget.ConstraintLayout>