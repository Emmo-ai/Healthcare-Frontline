<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="CovidCheckerActivities.BasedOnWhatYouToldMe">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/imageView37"
            android:layout_width="1067dp"
            android:layout_height="448dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/signupsignin" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getMoreinfoOnCorona"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/quicksand_mediumm"
            android:text="Get more information on coronavirus"
            android:textAllCaps="false"
            android:textColor="@color/deepbluedark"
            android:textSize="16sp"
            app:cornerRadius="19dp"
            app:layout_constraintEnd_toEndOf="@+id/textView64"
            app:layout_constraintStart_toStartOf="@+id/textView64"
            app:layout_constraintTop_toBottomOf="@+id/textView64" />

        <TextView
            android:id="@+id/startnewSymptomcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Start a new symptom check"
            android:textColor="@color/deepbluedark"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:cornerRadius="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/getMoreinfoOnCorona"
            app:layout_constraintStart_toStartOf="@+id/getMoreinfoOnCorona"
            app:layout_constraintTop_toBottomOf="@+id/getMoreinfoOnCorona" />

        <TextView
            android:id="@+id/textView64"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/quicksand_mediumm"
            android:text="Based on the data you gave, it's unlikely that you have \ncoronavirus(COVID-19). But you should start a new \nsyptom check if you get any of the following:\n \n - A new or continuous cough\n-  Fever\n-  Difficulty breathing \n-  Loss or change to your sense of smell or taste\n\n What to do :\nPeople who are clinically vulnerable because of their\nage or medical problems are more at risk of getting\nvery sick with COVID-19. So you should try to avoid\ngetting infected by:\n\n -Limiting contact with people from outside your\nhousehold\n-Regularly washing your hands thoroughly\n-Cleaning areas of your home that are often touched\n-Keeping 2 metres apart from other people  "
            android:textColor="@color/deepbluedark"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView37" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>